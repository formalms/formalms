{{ Get_title({
	'index.php?r=adm/smtpsettings/show' : Lang_translate('_SMTP_SETTINGS', 'standard'),
	'':title
},false) }}

{{ Form_openForm('upsert_settings', 'index.php?r=adm/smtpsettings/upsert', false, 'post', 'multipart/form-data') }}
{% for setting, type in settings %}

    {% set translation =  '_' ~ setting|upper  %}
    {% set choices =  { '0': Lang_translate('_NO', 'standard'), '1': Lang_translate('_YES', 'standard')}  %}
   

    {% if type == 'string' %}

        {{ Form_getTextfield(Lang_translate(translation,'smtpsettings'), setting, setting, 255, item[setting]) }}

    {% else %}

        {{ Form_getDropdown(Lang_translate(translation, 'smtpsettings'), setting, setting, choices, item[setting]) }}
   
    {% endif %}

{% endfor %}

    {{ Form_openButtonSpace() }}
        {{ Form_getButton('save', 'save', Lang_translate('_SAVE', 'admin_lang')) }}
        {{ Form_getButton('undo', 'undo', Lang_translate('_UNDO', 'admin_lang')) }}
    {{ Form_closeButtonSpace() }}
{{ Form_closeForm() }}