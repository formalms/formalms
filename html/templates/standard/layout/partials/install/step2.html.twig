<div class="step2">
    <form id="formstep2">
    <h1>{{databaseInfoLabel}}</h1>
    <div class="form_line_l">
        <div id="database_data">

        {{ Form_getTextfield(dbHostLabel, 'db_host', 'dbHost', 255, setValues.dbHost ?? dbConfig.dbHost) }}
        {{ Form_getTextfield(dbNameLabel, 'db_name', 'dbName', 255, setValues.dbName ?? dbConfig.dbName) }}
        {{ Form_getTextfield(dbUsernameLabel, 'db_user', 'dbUser', 255, setValues.dbUser ?? dbConfig.dbUser) }}
        {{ Form_getPassword(dbPassLabel, 'db_pass', 'dbPass', 255) }}
        </div>
        <h6>{{ uploadMethodLabel }}</h6>

        {{ Form_getRadio(httpUploadLabel, 'http_upload', 'uploadMethod', 'http', setValues.uploadMethod == 'http' ? 1 : 0) }}

        {{ Form_getRadio(ftpUploadLabel, 'ftp_upload', 'uploadMethod', 'ftp', setValues.uploadMethod == 'ftp' ? 1 : 0) }}

        <div id="ftp_data" {{ setValues.uploadMethod == 'ftp' ? '' : 'style="display:none;"'}}>
        {{ Form_getTextfield(ftpHostLabel, 'ftp_host', 'ftpHost', 255, setValues.ftpHost ?? ftpConfig.ftpHost) }}
        {{ Form_getTextfield(ftpPortLabel, 'ftp_port', 'ftpPort', 255, setValues.ftpPort ?? ftpConfig.ftpPort) }}
        {{ Form_getTextfield(ftpUserLabel, 'ftp_user', 'ftpUser', 255, setValues.ftpUser ?? ftpConfig.ftpUser) }}
        {{ Form_getPassword(ftpPassLabel, 'ftp_pass', 'ftpPass', 255, setValues.ftpPass ?? ftpConfig.ftpPass) }}
        {{ Form_getTextfield(ftpPathLabel, 'ftp_path', 'ftpPath', 255, setValues.ftpPath ?? ftpConfig.ftpPath) }}
        </div>
    </div>
    </form>
</div>




